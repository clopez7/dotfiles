#Turn off screen then lock MATE desktop
# bindsym $mod+Control+l exec ~/.config/scripts/lock
bindsym $mod+Control+l exec "bash -i -c off"
bindsym $mod+b exec "brave-browser --password-store=basic"
bindsym $mod+n exec "bash -i -c normal"
# Pulse Audio controls
bindsym $mod+F2 exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym $mod+F1 exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
# Suspend
bindsym $mod+Shift+period exec systemctl suspend
